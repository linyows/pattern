{
  "name": "pattern-wall",
  "version": "1.0.0",
  "description": "Generate positions for pattern in an area",
  "main": "index.js",
  "types": "lib/pattern-wall.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "lib"
  ],
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "ci": "npm install && npm run lint && nyc ava -v && npm audit",
    "test": "ava -v",
    "cov": "nyc ava",
    "lint": "tslint -p tsconfig.json -c tslint.json src/**/*.ts",
    "preversion": "npm run clean && npm run build && npm test",
    "postversion": "git push origin --tags",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "devDependencies": {
    "@types/node": "^11.10.5",
    "ava": "^1.3.1",
    "codecov": "^3.2.0",
    "nyc": "^13.3.0",
    "testdouble": "^3.11.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-microsoft-contrib": "^6.1.0",
    "typescript": "^3.3.3333"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/linyows/pattern-wall.git"
  },
  "keywords": [
    "image",
    "pattern"
  ],
  "author": "linyows",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linyows/pattern-wall/issues"
  },
  "homepage": "https://github.com/linyows/pattern-wall"
}
